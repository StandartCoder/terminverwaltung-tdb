# =============================================================================
# Terminverwaltung - Environment Configuration
# =============================================================================
#
# For development: Copy this file to .env and edit as needed
# For production: The install.sh script generates this automatically
#
# =============================================================================

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/terminverwaltung?schema=public"

# App URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3001"

# CORS (comma-separated list of allowed origins for API)
CORS_ORIGIN="http://localhost:3000"

# JWT Authentication
# In production, these are auto-generated by install.sh or docker-entrypoint.sh
# For development, use these placeholder values (never use in production!)
JWT_SECRET="dev-only-jwt-secret-change-in-production-at-least-32-chars"
JWT_REFRESH_SECRET="dev-only-refresh-secret-change-in-production-at-least-32-chars"

# Cron Job Authentication
CRON_SECRET="dev-only-cron-secret"

# Email (SMTP) - Optional for development
# In development, emails are captured by Mailpit at http://localhost:8025
# SMTP_HOST=""
# SMTP_PORT=587
# SMTP_USER=""
# SMTP_PASSWORD=""
# SMTP_FROM=""
