{
  "name": "@terminverwaltung/api",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenv -e ../../.env -- tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/terminverwaltung vitest run",
    "test:watch": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/terminverwaltung vitest",
    "test:coverage": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/terminverwaltung vitest run --coverage"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.1",
    "@terminverwaltung/auth": "workspace:*",
    "@terminverwaltung/database": "workspace:*",
    "@terminverwaltung/email": "workspace:*",
    "@terminverwaltung/shared": "workspace:*",
    "@terminverwaltung/validators": "workspace:*",
    "hono": "^4.11.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@terminverwaltung/eslint-config": "workspace:*",
    "@terminverwaltung/typescript-config": "workspace:*",
    "@types/node": "^22.10.1",
    "dotenv-cli": "^7.4.4",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "vitest": "^2.1.8"
  }
}
